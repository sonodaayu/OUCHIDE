<%= stylesheet_link_tag "ouchisindex", :media => "all" %>
<div class='head-content'>
<div class='left'>
<h1>OUCHIDE</h1>
</div>
<div class=right>
<% if user_signed_in? %>
    <ul>
        <li><%= link_to 'マイページへ', mypage_path(id: current_user.id) %>
        <li><%= button_to 'ログアウト', destroy_user_session_path, method: :delete %>
    </ul>
<% else %>
    <%= button_to 'ログイン・ユーザー登録', new_user_registration_path, method: :get %>
<% end %>
</div>
</div>

<div class='topimage'>
<img src='https://kahu.jp/_adkahu/wp-content/uploads/2020/03/754_%E8%A8%98%E4%BA%8B1.jpg'>
